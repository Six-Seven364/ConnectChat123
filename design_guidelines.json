  "instructions_to_main_agent": {
    "setup": [
      "Install fonts: npm install @fontsource/plus-jakarta-sans @fontsource/inter",
      "Update tailwind.config.js with the new colors and border radius.",
      "Update index.css with the CSS variables provided in the 'colors' section."
    ],
    "implementation_rules": [
      "Use the 'glassmorphism' classes for all floating elements (modals, sticky headers, video controls).",
      "Ensure the 'dashboard' layout is strictly followed: Sidebar -> List -> Chat.",
      "For the Video Call interface, ensure controls are ALWAYS visible on hover but fade out when inactive.",
      "Use 'sonner' for all notifications (new message, call request).",
      "Apply 'data-testid' to all interactive elements."
    ],
    "universal_guidelines": [
      "Do not use gradients for text unless it's a large heading.",
      "Avoid pure black (#000000). Use the 'Deep Void' color defined in the palette.",
      "Ensure all inputs have a focus ring that matches the primary color.",
      "Use 'framer-motion' for smooth transitions between chat views and entering/leaving video calls."
    ]
  }
}