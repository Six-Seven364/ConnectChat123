{
  "brand_identity": {
    "name": "ConnectChat",
    "concept": "Flux - Fluid, Electric, Human",
    "emotional_tone": "Intimate, Clarity, Vibrant",
    "design_archetype": "Electric & Neon (Future/Speed) mixed with Pastel (Approachability)"
  },
  "typography": {
    "font_family": {
      "headings": "Plus Jakarta Sans, sans-serif",
      "body": "Inter, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "installation": "import '@fontsource/plus-jakarta-sans'; import '@fontsource/inter';",
    "scale": {
      "h1": "text-4xl md:text-6xl font-bold tracking-tight",
      "h2": "text-3xl md:text-4xl font-semibold tracking-tight",
      "h3": "text-2xl font-semibold",
      "body_lg": "text-lg leading-relaxed",
      "body_base": "text-base leading-relaxed",
      "caption": "text-sm text-muted-foreground"
    }
  },
  "colors": {
    "palette_strategy": "Vibrant Primary + Deep Neutral Backgrounds",
    "light_theme": {
      "background": "210 40% 98%",
      "foreground": "222 47% 11%",
      "primary": "243 75% 59%",
      "primary_foreground": "210 40% 98%",
      "card": "0 0% 100%",
      "card_foreground": "222 47% 11%",
      "border": "214 32% 91%"
    },
    "dark_theme": {
      "background": "222 47% 11%",
      "foreground": "210 40% 98%",
      "primary": "243 75% 59%",
      "primary_foreground": "210 40% 98%",
      "card": "217 33% 17%",
      "card_foreground": "210 40% 98%",
      "border": "217 33% 17%"
    },
    "accents": {
      "success": "#34d399",
      "warning": "#fbbf24",
      "error": "#f87171",
      "online": "#34d399",
      "offline": "#94a3b8"
    }
  },
  "visual_enhancers": {
    "glassmorphism": {
      "heavy": "bg-background/80 backdrop-blur-xl border-white/10",
      "light": "bg-white/60 backdrop-blur-md border-white/20 dark:bg-black/40 dark:border-white/10"
    },
    "gradients": {
      "primary_button": "bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700",
      "text_gradient": "bg-clip-text text-transparent bg-gradient-to-r from-indigo-500 to-purple-500",
      "subtle_mesh": "bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-indigo-900/20 via-background to-background"
    },
    "shadows": {
      "soft": "shadow-[0_8px_30px_rgb(0,0,0,0.04)]",
      "glow": "shadow-[0_0_15px_rgba(99,102,241,0.5)]"
    },
    "border_radius": {
      "container": "rounded-3xl",
      "button": "rounded-full",
      "input": "rounded-xl"
    }
  },
  "components": {
    "buttons": {
      "primary": "h-11 px-8 rounded-full bg-primary text-primary-foreground font-medium transition-all hover:scale-105 active:scale-95 shadow-lg shadow-primary/25",
      "secondary": "h-11 px-8 rounded-full bg-secondary text-secondary-foreground hover:bg-secondary/80",
      "ghost": "h-10 w-10 rounded-full hover:bg-accent hover:text-accent-foreground"
    },
    "inputs": {
      "default": "h-12 rounded-xl border-border bg-background/50 px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all"
    },
    "cards": {
      "default": "rounded-3xl border border-border/50 bg-card/50 backdrop-blur-sm p-6 shadow-sm hover:shadow-md transition-all"
    },
    "chat_bubbles": {
      "me": "bg-primary text-primary-foreground rounded-2xl rounded-tr-sm p-4 max-w-[80%] shadow-md",
      "other": "bg-secondary text-secondary-foreground rounded-2xl rounded-tl-sm p-4 max-w-[80%]"
    },
    "avatars": {
      "container": "relative h-10 w-10 rounded-full overflow-hidden border-2 border-background",
      "status_indicator": "absolute bottom-0 right-0 h-3 w-3 rounded-full border-2 border-background"
    }
  },
  "layout_strategies": {
    "dashboard": {
      "grid": "grid grid-cols-1 md:grid-cols-[80px_350px_1fr] h-screen overflow-hidden",
      "sidebar": "flex flex-col items-center py-6 border-r border-border/40 bg-card/30 backdrop-blur-xl",
      "chat_list": "flex flex-col border-r border-border/40 bg-background/50",
      "main_chat": "flex flex-col relative bg-background"
    },
    "video_call": {
      "container": "relative w-full h-full bg-black flex items-center justify-center overflow-hidden",
      "controls": "absolute bottom-8 left-1/2 -translate-x-1/2 flex gap-4 p-4 rounded-2xl bg-white/10 backdrop-blur-md border border-white/10 shadow-2xl",
      "pip": "absolute top-4 right-4 w-48 aspect-video rounded-xl bg-gray-900 border border-white/10 shadow-xl overflow-hidden"
    }
  },
